<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22000000" />
            <corners android:radius="24dp" />
            <padding
                android:bottom="2dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
    <!-- Right shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22000000" />
            <corners android:radius="24dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="2dp"
                android:top="0dp" />
        </shape>
    </item>
    <!-- Main card -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#191E2A"
                android:endColor="#25293A"
                android:angle="315" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Subtle highlight at top -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1AFFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270" />
            <corners
                android:topLeftRadius="24dp"
                android:topRightRadius="24dp" />
        </shape>
    </item>
</layer-list> 